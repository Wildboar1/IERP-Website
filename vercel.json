{
  "buildCommand": "npm run build",
  "installCommand": "npm install --legacy-peer-deps",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/api/applications/:id/status",
      "destination": "/api/applications/[id]/status"
    },
    {
      "source": "/(?!api)(.*)",
      "destination": "/index.html"
    }
  ],
  "routes": [
    {
      "src": "/api/applications/([^/]+)/status",
      "dest": "/api/applications/[id]/status"
    }
  ],
  "env": {
    "FORCE_REBUILD": "true"
  }
}
